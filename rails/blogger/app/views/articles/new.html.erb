<h1>New article</h1>
<%= form_for(@article) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |e| %>
      <li><%= error %></li>  
    <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
